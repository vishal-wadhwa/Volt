<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_appliances"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="isgw.Activities.AppliancesActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/real_graph_holder"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                app:cardElevation="2sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="APPLIANCES"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="normal|bold" />

            <LinearLayout
                android:id="@+id/layer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/air_c"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/ac" />

                <ImageView
                    android:id="@+id/ref"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/ref" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AIR CONDITIONER"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Subhead" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="REFRIDGERATOR"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Subhead" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bulb"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/bulb" />

                <ImageView
                    android:id="@+id/wash_m"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/wm" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="LIGHTING"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Subhead" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="WASHING MACHINE"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Subhead" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layer5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/comp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/computer" />

                <ImageView
                    android:id="@+id/heater"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/fireplace" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layer6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TELEVISION"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Subhead" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="HEATER"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Subhead" />

            </LinearLayout>


            <Button
                android:id="@+id/mains"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@color/Color_MidnightBlue"
                android:text="MAINS"
                android:textColor="@color/accent"
                android:textSize="20sp" />


        </LinearLayout>
    </RelativeLayout>
</ScrollView>