<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="isgw.Activities.AccountActivity">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/elec">


                <ImageView
                    app:srcCompat="@drawable/flash"
                    android:id="@+id/imageView"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:text="ELECTRICITY"
                        android:textAlignment="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textAllCaps="true"
                        android:textSize="24sp"
                        android:textColor="@android:color/background_light" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="2dp"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                        android:textSize="18sp"
                        android:textColor="@android:color/background_light"
                        tools:text="Check and analyze electric consumption"
                        android:text="Check and analyze electric consumption"
                        android:layout_height="80dp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@android:color/holo_green_light"
                android:id="@+id/carbon">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="CARBON Footprint"
                        android:textAlignment="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textAllCaps="true"
                        android:textSize="24sp"
                        android:textColor="@android:color/background_light"
                        android:layout_width="240dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="6dp"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                        android:textSize="18sp"
                        android:textColor="@android:color/background_light"
                        tools:text="Manage your release of carbon footprints"
                        android:layout_weight="0.75"
                        android:layout_height="50dp"
                        android:text="Manage your release of carbon footprints" />

                </LinearLayout>


                <ImageView
                    app:srcCompat="@drawable/graphene"
                    android:id="@+id/imageView2"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:paddingRight="20dp" />



            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@android:color/holo_orange_light"
                android:id="@+id/reward">


                <ImageView
                    app:srcCompat="@drawable/medal"
                    android:id="@+id/imageView3"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="rewards"
                        android:textAlignment="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textAllCaps="true"
                        android:textSize="24sp"
                        android:textColor="@android:color/background_light"
                        android:layout_width="240dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                        android:textSize="18sp"
                        android:textColor="@android:color/background_light"
                        tools:text="See your rewards and redeem them"
                        android:text="See your rewards and redeem them" />

                </LinearLayout>


            </LinearLayout>




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#1fa8ed"
                android:id="@+id/profile"
                android:layout_height="130dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="PROFILE"
                        android:textAlignment="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textAllCaps="true"
                        android:textSize="24sp"
                        android:textColor="@android:color/background_light"
                        android:layout_width="240dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="2dp"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                        android:textSize="18sp"
                        android:textColor="@android:color/background_light"
                        tools:text="Edit profile details here"
                        android:layout_weight="0.75"
                        android:layout_height="50dp"
                        android:text="Edit profile details here"
                        android:layout_marginBottom="10dp" />

                </LinearLayout>


                <ImageView
                    app:srcCompat="@drawable/user"
                    android:id="@+id/imageView4"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:paddingRight="20dp" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#c44efb"
                android:id="@+id/payments"
                android:layout_height="130dp">


                <ImageView
                    app:srcCompat="@drawable/wallet"
                    android:id="@+id/imageView5"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="PAYMENTS"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textAllCaps="true"
                        android:textSize="24sp"
                        android:textColor="@android:color/background_light"
                        android:layout_width="240dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                        android:textSize="18sp"
                        android:textColor="@android:color/background_light"
                        tools:text="Manage payments"
                        android:layout_weight="0.75"
                        android:layout_height="50dp"
                        android:text="Manage payments"
                        android:layout_marginBottom="10dp" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/Color_Coral"
                android:id="@+id/appliances"
                android:layout_height="130dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="APPLIANCE TRACK"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textAllCaps="true"
                        android:textSize="24sp"
                        android:textColor="@android:color/background_light"
                        android:layout_width="240dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                        android:textSize="18sp"
                        android:textColor="@android:color/background_light"
                        tools:text="Monitor appliance usage"
                        android:layout_weight="0.75"
                        android:layout_height="50dp"
                        android:text="Monitor appliance usage"
                        android:layout_marginBottom="10dp" />

                </LinearLayout>



                <ImageView
                    app:srcCompat="@drawable/appliance"
                    android:id="@+id/imageView6"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="20dp" />


            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="22sp"
                android:text="SIGN OUT"
                android:id="@+id/signout"
                android:background="@color/Color_Crimson"
                android:textColor="@color/accent"
                />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
