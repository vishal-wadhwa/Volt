<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_electricity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="isgw.Activities.ElectricityActivity">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@color/primary" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignBottom="@+id/imageView6"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="9dp"
                android:layout_marginStart="20dp"
                app:srcCompat="@drawable/plug" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView4"
                android:layout_marginStart="23dp"
                android:layout_toEndOf="@+id/imageView7"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="electricity"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView7"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginBottom="9dp"
                android:layout_marginStart="22dp"
                android:text="Manager"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/imageView6"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:src="@android:color/holo_blue_dark"
                app:srcCompat="@android:color/holo_blue_dark" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/imageView8"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:src="@android:color/holo_green_dark"
                app:srcCompat="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView9"
                android:layout_centerHorizontal="true"
                android:paddingBottom="15dp"
                android:text="SIDDHANT CHADHA"
                android:textColor="@color/accent"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/imageView9"
                android:layout_marginTop="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:src="@android:color/holo_orange_dark"
                app:srcCompat="@android:color/holo_orange_dark" />

            <TextView
                android:id="@+id/hr"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/imageView11"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="10dp"
                android:background="@color/aluminum"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="20dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView11"
                android:layout_toEndOf="@+id/imageView10"
                android:paddingBottom="10dp"
                android:text="Units Remaining\n\t\t\t\t1250kW"
                android:textColor="@color/accent"
                android:textSize="20sp" />

            <!--<ImageView-->
            <!--app:srcCompat="@drawable/rupee"-->
            <!--android:id="@+id/imageView10"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="50dp"-->
            <!--android:paddingBottom="10dp"-->
            <!--android:paddingLeft="8dp"-->
            <!--android:layout_above="@+id/imageView11"-->
            <!--android:layout_alignStart="@+id/imageView7"-->
            <!--android:layout_marginStart="10dp" />-->
            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignEnd="@+id/imageView7"
                android:layout_alignTop="@+id/textView9"
                android:paddingBottom="5dp"
                app:srcCompat="@drawable/flash" />


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/hr"
                android:layout_alignEnd="@+id/textView9"
                android:paddingBottom="10dp"
                android:paddingTop="40dp"
                android:text="Units Consumed\n\t\t\t122.65 kW"
                android:textColor="@color/accent"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/imageView10"
                android:layout_alignTop="@+id/imageView11"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/flash" />

            <TextView
                android:id="@+id/stats"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_below="@+id/hr"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="13dp"
                android:background="?attr/colorAccent"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="STATISTICS"
                android:textColor="@color/accent"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/graphs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stats"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                tools:context="isgw.Activities.ElectricityActivity">


                <android.support.v7.widget.CardView
                    android:id="@+id/chart_holder"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    app:cardElevation="2sp">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>

                <!--<Button-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="60dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:background="@color/Color_Teal"-->
                <!--android:text="PAY BILL"-->
                <!--android:textColor="@color/accent"-->
                <!--android:textSize="20sp" />-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/add_units"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@android:color/holo_red_light"
        android:text="Purchase Units"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
</FrameLayout>