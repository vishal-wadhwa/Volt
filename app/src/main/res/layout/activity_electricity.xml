<?xml version="1.0" encoding="utf-8"?>


<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_electricity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="isgw.Activities.ElectricityActivity">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@color/primary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView6"
        android:layout_height="120dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/plug"
        android:layout_marginStart="20dp"
        android:id="@+id/imageView7"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="9dp" />

    <TextView
        android:text="electricity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="30sp"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_marginStart="23dp"
        android:layout_above="@+id/textView4"
        android:layout_toEndOf="@+id/imageView7" />

    <TextView
        android:text="Manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:id="@+id/textView4"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="30sp"
        android:textColor="@android:color/background_light"
        android:textAllCaps="true"
        android:layout_marginBottom="9dp"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_alignStart="@+id/textView3" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_below="@+id/imageView6"
        android:src="@android:color/holo_blue_dark"
        android:id="@+id/imageView8"
        app:srcCompat="@android:color/holo_blue_dark"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:layout_width="match_parent"
        android:src="@android:color/holo_green_dark"
        android:id="@+id/imageView9"
        app:srcCompat="@android:color/holo_green_dark"
        android:layout_height="60dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/imageView8"
        android:layout_marginTop="10dp"/>

    <TextView
        android:text="SIDDHANT CHADHA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:paddingBottom="15dp"
        android:textSize="24sp"
        android:textColor="@color/accent"
        android:layout_above="@+id/imageView9"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:src="@android:color/holo_orange_dark"
        android:id="@+id/imageView11"
        app:srcCompat="@android:color/holo_orange_dark"
        android:layout_height="60dp"
        android:layout_below="@id/imageView9"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/imageView11"
        android:paddingTop="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/aluminum"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:id="@+id/hr" />

    <TextView
        android:text="1250.69"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:paddingBottom="10dp"
        android:textAllCaps="true"
        android:textColor="@color/accent"
        android:textSize="36sp"
        android:layout_above="@+id/imageView11"
        android:layout_toEndOf="@+id/imageView7"
        android:layout_marginStart="15dp" />

    <ImageView
        app:srcCompat="@drawable/rupee"
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:layout_above="@+id/imageView11"
        android:layout_alignStart="@+id/imageView7"
        android:layout_marginStart="10dp" />


    <TextView
        android:text="122.65 kW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="36sp"
        android:paddingBottom="10dp"
        android:textColor="@color/accent"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_alignEnd="@+id/textView7"
        android:paddingTop="40dp"/>

    <ImageView
        app:srcCompat="@drawable/flash"
        android:id="@+id/imageView12"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="7dp"
        android:layout_alignTop="@+id/imageView11"
        android:layout_toStartOf="@+id/textView10"
        android:paddingTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/hr"
        android:layout_marginTop="20dp"
        android:background="?attr/colorAccent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="STATISTICS"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:textColor="@color/accent"
        android:paddingTop="4dp"
        android:id="@+id/stats"
        android:paddingBottom="4dp"
        android:layout_height="44dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <LinearLayout
        android:id="@+id/graphs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:orientation="vertical"
        android:paddingTop="4dp"
        android:layout_below="@id/stats"
        android:layout_marginTop="10dp"
        tools:context="isgw.Activities.ElectricityActivity">


        <android.support.v7.widget.CardView
            android:id="@+id/bar_graph_holder"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_margin="5dp"
            app:cardElevation="2sp"
            android:layout_height="300dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="PAY BILL"
            android:textSize="20sp"
            android:background="@color/Color_Teal"
            android:textColor="@color/accent"
            android:layout_marginTop="5dp"/>


    </LinearLayout>

</RelativeLayout>
</ScrollView>
